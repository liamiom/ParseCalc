<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>pcalc</AssemblyName>
    <PackAsTool>true</PackAsTool>
    <PackageId>ParseCalc</PackageId>
    <ToolCommandName>pcalc</ToolCommandName>
    <PackageOutputPath>bin/./nupkg</PackageOutputPath>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.3.3</Version>
    <Title>A simple text parsing calculator.</Title>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Description>A simple free text parsing calculator. For when the inbuilt calculator is not enough, but a scripting language is too much.</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Lib\Lib.csproj" />
  </ItemGroup>

</Project>
